('biceps' , '20:35' , 10 ),
('triceps' , '10:45' , 30 ),
('gluteo' , '05:15' , 25 );

CREATE TABLE IF NOT EXISTS pagamentos (
id_pagamento INT AUTO_INCREMENT PRIMARY KEY ,
id_aluno INT ,
id_plano INT,
data_pagamento date ,
valor_pago DECIMAL (10,2) ,
forma_pagamento VARCHAR (10)

);

