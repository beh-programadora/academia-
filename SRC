CREATE TABLE IF NOT EXISTS planos (
id_plano INT AUTO_INCREMENT PRIMARY KEY ,
tipo_plano VARCHAR (50) ,
descricao_plano VARCHAR (255) ,
preco_plano DECIMAL (10,2) ,
duracao_meses decimal (10,2)

);


INSERT INTO planos (tipo_plano , descricao_plano , preco_plano , duracao_meses)
VALUES 
('básico' , 'treino sem personal' , 89.00 , 6) ,
('médio' , 'treino com personal + aulas extras' , 109.00 , 10),
('premium' , 'acompanhamento com o nutricionista', 250.00 , 12);



CREATE TABLE IF NOT EXISTS treinos (
id_treino INT AUTO_INCREMENT PRIMARY KEY , 
id_aluno INT ,
descricao_treino VARCHAR (255) ,
data_inicio_treino DATE,
data_fim_treino DATE

);


INSERT INTO treinos  ( descricao_treino , data_inicio_treino , data_fim_treino)
VALUES
('treino sem personal' , '2024-12-20' , '2026-05-10'),
('acompanhamento com o nutricionista' , '2015-10-30' , '2024-07-18') ,
('treino com personal + aulas extras' , '2010-01-15' , '2016-04-25');


CREATE TABLE IF NOT EXISTS aulas (
id_aula INT AUTO_INCREMENT PRIMARY KEY ,
tipo_aula VARCHAR (20),
id_professor INT ,
horario_aula DATETIME ,
capacidade_aulas VARCHAR (30)

);

INSERT INTO aulas (tipo_aula , horario_aulas ,capacidade_aulas)
VALUES
