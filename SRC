CREATE TABLE IF NOT EXISTS professores (
id_professor INT AUTO_INCREMENT PRIMARY KEY ,
nome_professor VARCHAR (100) ,
especialidade_professor VARCHAR (255) ,
telefone_professor decimal (10,2) ,
email_professor VARCHAR (100)

);

INSERT INTO professores (nome_professor , especialidade_professor , telefone_professor , email_professor)
